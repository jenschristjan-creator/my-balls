{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang.exe",
            "args": [
                "-std=c23",
                "'@compile_flags.txt'",
                "-Iraylib/include",
                "-Lraylib/lib",
                "-lraylib",
                "-lwinmm",
                "-lgdi32",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-g",
                "main.c",
                "-o",
                "main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": ".\\main.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        }
    ]
}
